<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.radioactiveyak.android.chatcodes.ProfileEdit">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/profile_edit_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/profile_edit_first_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/profile_edit_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:hint="First Name"
                    android:layout_below="@id/profile_edit_first_name_text"/>
                <TextView
                    android:id="@+id/profile_edit_last_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_below="@id/profile_edit_first_name"/>
                <EditText
                    android:id="@+id/profile_edit_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:hint="Last Name"
                    android:layout_below="@id/profile_edit_last_name_text"/>
                <TextView
                    android:id="@+id/profile_edit_college_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="College"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_below="@id/profile_edit_last_name"/>
                <EditText
                    android:id="@+id/profile_edit_college"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:hint="College / Institution"
                    android:layout_below="@id/profile_edit_college_text"/>
                <TextView
                    android:id="@+id/profile_edit_email_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_below="@id/profile_edit_college"/>
                <EditText
                    android:id="@+id/profile_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:hint="Email Address"
                    android:layout_below="@id/profile_edit_email_text"/>
                <Button
                    android:id="@+id/profile_edit_submit_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Changes"
                    android:textStyle="bold|italic"
                    android:textSize="20sp"
                    android:layout_below="@id/profile_edit_email"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/profile_edit_lower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_edit_upper"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/profile_edit_old_password_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Old Password"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/profile_edit_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:inputType="textPassword"
                    android:hint="Old Password"
                    android:layout_below="@id/profile_edit_old_password_text"/>
                <TextView
                    android:id="@+id/profile_edit_new_password_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter New Password"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_below="@id/profile_edit_old_password"/>
                <EditText
                    android:id="@+id/profile_edit_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:inputType="textPassword"
                    android:hint="New Password"
                    android:layout_below="@id/profile_edit_new_password_text"/>
                <Button
                    android:id="@+id/profile_edit_submit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_edit_new_password"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:text="Change Password"
                    android:textStyle="bold|italic"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
